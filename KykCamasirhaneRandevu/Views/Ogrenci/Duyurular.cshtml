@model IEnumerable<KykCamasirhaneRandevu.DAL.Entities.Duyuru>

@{
    ViewData["Title"] = "Duyurular";
    Layout = "_OgrenciLayout";
}

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Duyurular</h6>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    Henüz duyuru bulunmamaktadır.
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var duyuru in Model)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">@duyuru.DuyuruKonu</h5>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">@duyuru.DuyuruMetin</p>
                                </div>
                                <div class="card-footer text-muted">
                                    <small>@duyuru.DuyuruTarihi.ToString("dd.MM.yyyy HH:mm")</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div> 