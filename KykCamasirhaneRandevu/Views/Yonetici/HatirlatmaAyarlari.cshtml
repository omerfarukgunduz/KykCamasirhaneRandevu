@model KykCamasirhaneRandevu.DAL.Entities.RandevuHatirlatma

@{
    ViewData["Title"] = "Hatırlatma Ayarları";
    Layout = "_YoneticiLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Hatırlatma Ayarları</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="HatirlatmaAyarlari" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="HatirlatmaSuresiDakika" class="control-label">Hatırlatma Süresi (Dakika)</label>
                            <input asp-for="HatirlatmaSuresiDakika" class="form-control" />
                            <span asp-validation-for="HatirlatmaSuresiDakika" class="text-danger"></span>
                            <small class="form-text text-muted">Öğrencilere randevularından kaç dakika önce hatırlatma e-postası gönderileceğini belirler. (1-1440 dakika arası)</small>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 