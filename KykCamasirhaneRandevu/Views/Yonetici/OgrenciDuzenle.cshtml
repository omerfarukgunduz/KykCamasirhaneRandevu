@{
    ViewData["Title"] = "Öğrenci Düzenle";
    Layout = "_YoneticiLayout";
}

@model KykCamasirhaneRandevu.DAL.Entities.Ogrenci

<div class="container-fluid">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <div asp-validation-summary="All" class="text-danger"></div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Öğrenci Düzenle</h6>
        </div>
        <div class="card-body">
            <form asp-controller="Yonetici" asp-action="OgrenciDuzenlePost" asp-route-id="@Model.OgrenciID" method="post">
                <input type="hidden" asp-for="OgrenciID" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="OgrenciTC" class="control-label">TC Numarası</label>
                            <input asp-for="OgrenciTC" class="form-control" maxlength="11" required />
                            <span asp-validation-for="OgrenciTC" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="OgrenciAdSoyad" class="control-label">Ad Soyad</label>
                            <input asp-for="OgrenciAdSoyad" class="form-control" required />
                            <span asp-validation-for="OgrenciAdSoyad" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Oda_YatakNo" class="control-label">Oda/Yatak No</label>
                            <input asp-for="Oda_YatakNo" class="form-control" required />
                            <span asp-validation-for="Oda_YatakNo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="OgrenciEposta" class="control-label">E-posta</label>
                            <input asp-for="OgrenciEposta" class="form-control" type="email" required />
                            <span asp-validation-for="OgrenciEposta" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="OgrenciSifre" class="control-label">Şifre</label>
                            <input asp-for="OgrenciSifre" class="form-control" type="password" value="@Model.OgrenciSifre" required />
                            <span asp-validation-for="OgrenciSifre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="CezaDurumu" class="control-label">Ceza Durumu</label>
                            <div class="form-check">
                                <input asp-for="CezaDurumu" class="form-check-input" type="checkbox" />
                                <label class="form-check-label">Cezalı</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Kaydet
                    </button>
                    <a asp-action="OgrenciListele" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
} 