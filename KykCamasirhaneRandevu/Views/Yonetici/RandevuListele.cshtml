@model IEnumerable<KykCamasirhaneRandevu.DAL.Entities.Randevu>

@{
    ViewData["Title"] = "Randevu Listesi";
}

<div class="container">
    <h2 class="mb-4">Randevu Listesi</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Öğrenci</th>
                    <th>Randevu Tarihi</th>
                    <th>Kurutma</th>
                    <th>Teslim Süresi</th>
                    <th>Onay Durumu</th>
                    <th>Gerçekleşme Durumu</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var randevu in Model)
                {
                    <tr>
                        <td>@randevu.Ogrenci.OgrenciAdSoyad</td>
                        <td>@randevu.RandevuTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            @if (randevu.Kurutma)
                            {
                                <span class="badge bg-success">Var</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Yok</span>
                            }
                        </td>
                        <td>@randevu.TeslimeKalanSure dakika</td>
                        <td>
                            @if (randevu.RandevuOnayDurumu)
                            {
                                <span class="badge bg-success">Onaylandı</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Beklemede</span>
                            }
                        </td>
                        <td>
                            @if (randevu.RandevuGerceklesti.HasValue)
                            {
                                if (randevu.RandevuGerceklesti.Value)
                                {
                                    <span class="badge bg-success">Gerçekleşti</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Gerçekleşmedi</span>
                                }
                            }
                            else
                            {
                                <span class="badge bg-secondary">Belirsiz</span>
                            }
                        </td>
                        <td>
                            @if (!randevu.RandevuOnayDurumu)
                            {
                                <form asp-action="RandevuOnayla" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@randevu.RandevuID" />
                                    <button type="submit" class="btn btn-success btn-sm">
                                        <i class="bi bi-check-circle"></i> Onayla
                                    </button>
                                </form>
                                <form asp-action="RandevuReddet" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@randevu.RandevuID" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-x-circle"></i> Reddet
                                    </button>
                                </form>
                            }
                            else if (!randevu.RandevuGerceklesti.HasValue)
                            {
                                <form asp-action="RandevuGerceklesti" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@randevu.RandevuID" />
                                    <button type="submit" class="btn btn-success btn-sm">
                                        <i class="bi bi-check-circle"></i> Gerçekleşti
                                    </button>
                                </form>
                                <form asp-action="RandevuGerceklesmedi" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@randevu.RandevuID" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-x-circle"></i> Gerçekleşmedi
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        // Sayfa yüklendiğinde tabloyu DataTable'a dönüştür
        $(document).ready(function() {
            $('.table').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json'
                },
                order: [[1, 'desc']] // Randevu tarihine göre sırala
            });
        });
    </script>
} 