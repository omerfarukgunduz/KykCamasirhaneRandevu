@model KykCamasirhaneRandevu.DAL.Entities.Mesaj

@{
    ViewData["Title"] = "Mesaj Cevapla";
    Layout = "_YoneticiLayout";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Mesaj Cevapla</h6>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <h5>Orijinal Mesaj</h5>
                <div class="card">
                    <div class="card-body">
                        <p><strong>Gönderen:</strong> @Model.Ogrenci.OgrenciAdSoyad</p>
                        <p><strong>Tarih:</strong> @Model.Tarih.ToString("dd.MM.yyyy HH:mm")</p>
                        <p><strong>Başlık:</strong> @Model.Baslik</p>
                        <p><strong>İçerik:</strong></p>
                        <p>@Model.Icerik</p>
                    </div>
                </div>
            </div>

            <form asp-action="MesajCevap" method="post">
                <input type="hidden" name="id" value="@Model.MesajID" />
                <div class="mb-3">
                    <label class="form-label">Alıcı</label>
                    <input type="text" class="form-control" value="@Model.Ogrenci.OgrenciAdSoyad" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label">Konu</label>
                    <input type="text" class="form-control" value="Re: @Model.Baslik" readonly>
                </div>
                <div class="mb-3">
                    <label for="cevap" class="form-label">Cevabınız</label>
                    <textarea class="form-control" id="cevap" name="cevap" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-send"></i> Gönder
                </button>
                <a asp-action="Mesajlar" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Geri Dön
                </a>
            </form>
        </div>
    </div>
</div> 